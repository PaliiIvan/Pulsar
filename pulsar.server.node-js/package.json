{
  "name": "pulsar.web",
  "version": "0.0.1",
  "description": "Pulsar web application",
  "main": "server-api.ts",
  "author": "Ivan Palii",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/server-api.js",
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server-api.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "serve-debug": "nodemon --inspect dist/server-api.js",
    "debug": "npm run build && npm run watch-debug",
    "copy-static-assets": "ts-node addStaticFiles.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@types/socket.io": "^2.1.11",
    "@types/uuid": "^8.3.0",
    "axios": "^0.19.2",
    "body-parser": "^1.20.1",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": ">=5.7.5",
    "socket.io": "^2.3.0",
    "uuid": "^8.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.3",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/mongoose": "^5.7.1",
    "@types/shelljs": "^0.8.6",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "nodemon": "^2.0.2",
    "shelljs": "^0.8.3",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  }
}
